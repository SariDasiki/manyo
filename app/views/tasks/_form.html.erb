<%= form_with(model: task, local: true) do |f| %>
    <% if task.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="col">
      <%= f.label :title, t('activerecord.attributes.task.title') %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    
    <div class="col">
      <%= f.label :content, t('activerecord.attributes.task.content') %>
      <%= f.text_area :content, class: "form-control" %>
    </div>

    
    <div class="col">
      <%= f.label :deadline_on, t('activerecord.attributes.task.deadline_on') %>
      <%= f.date_field :deadline_on, class: "form-control" %>
    </div>
   

  <div class="col">
    <%= f.label :status, t('activerecord.attributes.task.status') %>
    <%= f.select :status, Task.statuses.keys.to_a, { include_blank: true }, class: "form-control" %>
  </div>

  <div class="col">
    <%= f.label :priority, t('activerecord.attributes.task.priority') %>
    <%= f.select :priority, Task.priorities.keys.to_a, { include_blank: true }, class: "form-control" %>
  </div>

  <div class="col">
    <%= f.label :label, t('activerecord.attributes.label.') %>
    <% current_user.labels.each do |label| %>
      <%= f.check_box :label_ids, { multiple: true, include_hidden: false }, label[:id] %>
      <%= label.name %>
    <% end %>
  </div>

    

  
   <div class="field">
      <%= f.submit id: button_id %>
   </div>
      <%= link_to t('common.back'), tasks_path, id: "back" %>
   
      

  <% end %>