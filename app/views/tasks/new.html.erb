<h1><%= t('tasks.new') %></h1>

<%= form_with(model: @task, local: true) do |f| %>
  <p><%= f.label :title %></p>
  <p><%= f.text_field :title %></p>
  <%= f.label :content %>
  <p><%= f.text_area :content, size: "20x5"%></p>
  <p><%= f.submit "create task", class: "create-task"%></p>
<%= link_to t('戻る'), tasks_path, class: "back"%>
<% end %>