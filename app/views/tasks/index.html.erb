<h1><%= t('tasks.index') %></h1>
<%= form_with(scope: :search, url: tasks_path, method: :get, local: true) do |f| %>

  
    
  <div class="form-row">
    <div class="col">
      <%= f.label :status, t('activerecord.attributes.task.status') %>
      <%= f.select :status, Task.statuses, { include_blank: true }, class: "form-control" %>
    </div>

    <div class="col">
      <%= f.label :title, t('activerecord.attributes.task.title') %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="col">
      <%= f.label :label, t('activerecord.attributes.label.') %>
      <%= f.select :label, current_user.labels.pluck(:name, :id), { include_blank: true }, class: "form-control" %>
    </div>
    
  </div>

  <div class="field">
    <%= f.submit t('common.search'), id: "search_task", class: "btn btn-primary" %>
  </div>
<% end %>


  <table class="table table-hover">
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:title) %></th>
      <th><%= Task.human_attribute_name(:content) %></th>
      <th><%= Task.human_attribute_name(:created_at) %></th>
      <th><%= link_to Task.human_attribute_name(:deadline_on), sort_deadline_on: true %></th>   
      <th><%= link_to Task.human_attribute_name(:priority), sort_priority: true %></th>
      <th><%= Task.human_attribute_name(:status) %></th>
      <th colspan="5", scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at %></td>
        <td><%= task.deadline_on %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= link_to t('common.show'), task_path(task), class: "show-task btn btn-primary" %></td>
        <td><%= link_to t('common.edit'), edit_task_path(task), class: "edit-task btn btn-primary" %></td>
        <td><%= link_to t('common.destroy'), task_path(task), method: :delete, data: { confirm: t('common.confirm_destroy') }, class: "destroy-task btn btn-danger" %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tasks%>
